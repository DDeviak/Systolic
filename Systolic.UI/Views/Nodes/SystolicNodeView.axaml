<UserControl
    d:DesignHeight="60"
    d:DesignWidth="60"
    mc:Ignorable="d"
    x:Class="Systolic.UI.Views.Nodes.SystolicNodeView"
    x:DataType="nodes:SystolicNodeViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nodes="clr-namespace:Systolic.UI.ViewModels.Nodes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.DataContext>
        <nodes:SystolicNodeViewModel />
    </Design.DataContext>
    <UserControl.Styles>
        <Style Selector="Label">
            <Setter Property="Padding" Value="2,0" />
            <Setter Property="FontSize" Value="10" />
        </Style>
    </UserControl.Styles>
    <Panel>
        <Panel.ContextFlyout>
            <Flyout>
                <Grid ColumnDefinitions="*,60,*" RowDefinitions="*,100">
                    <TextBox
                        Grid.Column="1"
                        Grid.Row="0"
                        x:Name="TextBox" />
                    <Button
                        Command="{Binding AddRegister}"
                        CommandParameter="{Binding ElementName=TextBox, Path=Text}"
                        Grid.Column="2"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        IsDefault="True">
                        Add Input
                    </Button>
                    <DataGrid
                        AutoGenerateColumns="True"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Grid.Row="1"
                        ItemsSource="{Binding Registers}"
                        VerticalScrollBarVisibility="Hidden" />
                </Grid>
            </Flyout>
        </Panel.ContextFlyout>
        <Rectangle Classes="node" />
        <ItemsControl ItemsSource="{Binding Registers}" VerticalAlignment="Center">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Label Content="{Binding Key}" />
                        <Label Content=":" />
                        <Label Content="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Panel>
</UserControl>